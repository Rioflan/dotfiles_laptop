! transparency - true or false (default)
!URxvt*transparent: false
URxvt*transparent: true

! tint with any color; i.e., blue, red, tomato4, olivedrab2, etc.
URxvt*tintColor: tonato4

! shading - 0 to 99 darkens, 101 to 200 lightens.
URxvt*shading: 20

! scrollback buffer lines - 65535 is max on most machines (64 is default)
!URxvt*saveLines: 12000

Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight
Xft.autohint:   false
Xft.lcdfilter:  lcddefault

! Underscore cursor
URxvt.cursorBlink: 1
URxvt.cursorUnderline: 1

! Inconsolata-dz Settings
URxvt.font: xft:inconsolata-dz for powerline:pixelsize=14:antialias=true:hinting=true
URxvt.boldFont: xft:inconsolata-dz for powerline:bold:pixelsize=14:antialias=true:hinting=true
URxvt.italicFont: xft:inconsolata-dz for powerline:italic:pixelsize=14:antialias=true:hinting=true
URxvt.boldItalicFont: xft:inconsolata-dz for powerline:bold:italic:pixelsize=14:antialias=true:hinting=true
URxvt.letterSpace: -1

URxvt.perl-ext-common: default,font-size

! keybinding
URxvt.keysym.C-Up:     perl:font-size:increase
URxvt.keysym.C-Down:   perl:font-size:decrease
URxvt.keysym.C-S-Up:   perl:font-size:incglobal
URxvt.keysym.C-S-Down: perl:font-size:decglobal
URxvt.keysym.C-equal:  perl:font-size:reset
URxvt.keysym.C-slash:  perl:font-size:show

